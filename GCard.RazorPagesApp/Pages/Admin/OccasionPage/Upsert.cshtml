@page
@model GCard.RazorPagesApp.Pages.Admin.OccasionPage.UpsertModel

<form method="post">
    <input asp-for="Occasion.Id" hidden/>
 <div class="row pb-2">
        <div class="col-10">
            <div class="border p-3 mt-4 row" >
                <div class="row pb-2">
                    <h2 class="text-primary">@(Model.Occasion.Id!=0 ? "Update":"Create") Item Type</h2><hr/>
                </div>
                <div class="mb-3">
                    <label asp-for="Occasion.Name"></label>
                    <input asp-for="Occasion.Name" class="form-control"/>
                    <span asp-validation-for="Occasion.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Occasion.DisplayOrder"></label>
                    <input asp-for="Occasion.DisplayOrder" class="form-control"/>
                    <span asp-validation-for="Occasion.DisplayOrder" class="text-danger"></span>
                </div>
                <br/><br/><hr/>
                <div class="col-12"> 
                    <button type="submit" class="btn btn-primary" style="width:150px;">@(Model.Occasion.Id!=0?"Update":"Create")</button>
                    <a asp-page="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>

            </div>
        </div>
  </div>
</form>

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}