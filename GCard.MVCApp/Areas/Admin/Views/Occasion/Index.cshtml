@model IEnumerable<GCard.Model.Occasion>

<partial name="_NotificationPartial"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Occasions:</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Occasion" asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create new Occasion
            </a>
        </div>
    </div>
    <br/><br/>
    <table id="tblData" class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/occasion.js"></script>
}