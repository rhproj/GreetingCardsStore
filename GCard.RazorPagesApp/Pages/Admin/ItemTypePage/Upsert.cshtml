@page
@model GCard.RazorPagesApp.Pages.Admin.ItemTypePage.UpsertModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Item Type</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="ItemType.Name"></label>
            <input asp-for="ItemType.Name" class="form-control"/>
            <span asp-validation-for="ItemType.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ItemType.DisplayOrder"></label>
            <input asp-for="ItemType.DisplayOrder" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}